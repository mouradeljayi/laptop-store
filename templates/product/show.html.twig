{% extends 'base.html.twig' %}

{% block title %}Show details{% endblock %}

{% block body %}

<div class="row mb-5">
  <div class="col-md-12">

  <div class="my-3 d-flex justify-content-between align-items-center">
   <h1> {{ product.name }}</h1>
   <a href="{{ path('order_store', {product: product.id}) }}" class="btn btn-sm btn-warning mx-1">
        Order now
    </a>
  </div>
 
    <div class="row">

    <div class="col-md-8">
        <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}" class="card-img-top">
    </div>
    <div class="col-md-4">
         <div class="card" style="width: 100%;">
               <div class="card-body">
                  <p class="card-text">{{ product.description }}</p>
                  <h5><span class="tw-bold">{{ product.price }} MAD</span></h5>
                  <h5><span class="tw-bold">Category : {{ product.category }}</span></h5>
               </div>
            </div>
          </div>
    </div>
   
  </div>  

</div>
{% endblock %}
